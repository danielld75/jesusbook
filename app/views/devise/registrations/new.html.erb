<div class="col-sm-8 col-sm-offset-2">
	<h2><%= t('.sign_up', :default => "Sign up") %></h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: "form-horizontal", html: {multipart: true}) do |f| %>
	  <%= devise_error_messages! %>
		<div class="form-group">
	  		<div><%= f.label :name, class: "col-sm-3 control-label" %></div>
	  			<div class="col-sm-9">
	  			<%= f.text_field :name, class:"form-control" %>
				</div>
		</div>


		<div class="form-group">
			<div><%= f.label :lastName, class: "col-sm-3 control-label" %></div>
			<div class="col-sm-9">
				<%= f.text_field :lastName, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
	  	<div><%= f.label :email, class: "col-sm-3 control-label" %></div>
	  	<div class="col-sm-9">
	  		<%= f.email_field :email, class: "form-control" %>
	  	</div>
		</div>

		<div class="form-group">
	  	<div><%= f.label :place, class: "col-sm-3 control-label" %></div>
	  	<div class="col-sm-9">
	  		<%= f.text_field :place, class: "form-control" %>
	  	</div>
		</div>

		<div class="form-group">
			<div><%= f.label :baptism_date, class: "col-sm-3 control-label" %></div>
			<div class="col-sm-9">
				<%= fields_for @user.build_baptism do |baptism_date| %>
					<%= baptism_date.date_field :sacrament_date %>
				<%end%>
			</div>
		</div>

		<div class="form-group">
	  	<div><%= f.label :password, class: "col-sm-3 control-label" %></div>
	  	<div class="col-sm-9">
	  		<%= f.password_field :password, class: "form-control" %>
	  	</div>
		</div>

		<div class="form-group">
	  	<div><%= f.label :password_confirmation, class: "col-sm-3 control-label" %></div>
	  	<div class="col-sm-9">
	  		<%= f.password_field :password_confirmation, class: "form-control" %>
	  	</div>
		</div>
		</div>

		<div class="form-group">
	  	<div class="col-sm-9 col-sm-offset-3"><%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-success" %></div>
	  </div>
	<% end %>

	<div class="col-sm-12"><hr></div>

	<%= render "devise/shared/links" %>
</div>
