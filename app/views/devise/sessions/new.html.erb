<div class="col-sm-8 col-sm-offset-2">
	<h2><%= t('.sign_in', :default => "Sign in") %></h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: "form-horizontal") do |f| %>
		<div class="form-group">
		  <div><%= f.label :email, class: "col-sm-2 control-label" %></div>
		  <div class="col-sm-10">
		  	<%= f.email_field :email, class: "form-control" %>
		  </div>
		</div>

		<div class="form-group">
	  	<div><%= f.label :password, class: "col-sm-2 control-label" %></div>
	  	<div class="col-sm-10">
	  		<%= f.password_field :password, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-10">
		    <div class="checkbox">
					<% if devise_mapping.rememberable? -%>
					  <label><%= f.check_box :remember_me %> <%= f.label :remember_me %></label>
					<% end -%>
				</div>
			</div>
		</div>
		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-10">
	  		<div><%= f.submit t('.sign_in', :default => "Sign in"), class: "btn btn-success" %></div>
	  	</div>
	  </div>
	<% end %>
	<div class="col-sm-12"><hr></div>
	<%= render "devise/shared/links" %>
</div>
