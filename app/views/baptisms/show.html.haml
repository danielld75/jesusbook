%h1
  = t('.Show Baptism')
%table.table
  %tr
    %th
      = t('sacrament_date')
    %th
      = t('local')
    %th
      = t('parish')
    %th
      = t('minister')
  %tr
    %td
      = @baptism.sacrament_date
    %td
      = @baptism.local
    %td
      = @baptism.parish
    %td
      = @baptism.minister

= link_to t('Edit'), edit_user_baptism_path(@baptism)
= link_to t('Delete'), user_baptism_path, method: :delete, data: {confirm: t("Are You sure?")}
