%h1
  = t('.New Baptism')
= form_for (@baptism), url: user_baptism_path do |f|
  = f.label t(:local)
  = f.text_field :local

  = f.label t(:parish)
  = f.text_field :parish

  = f.label t(:minister)
  = f.text_field :minister

  = f.label t(:sacrament_date)
  = f.text_field :sacrament_date, class: "datepicker"

  = f.submit

:coffeescript
  $(document).ready ->
    $(".datepicker").datepicker
      dateFormat: "dd-mm-yy",
      changeYear: true