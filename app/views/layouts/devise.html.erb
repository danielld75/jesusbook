<!DOCTYPE html>
<html>
<head>
  <title>Jesusbook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="page-header">
      <%= render 'shared/nav' %>
    </div>
    <div class="col-sm-12">
      <%= render partial: "shared/flash_messages", flash: flash %>
    </div>
    <div class="row">
      <% if current_user %>
        <%= link_to current_user.email, user_path(current_user.id),  class: "btn btn-primary"%>
        <%= link_to "Edit registration", edit_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Wyloguj siÄ™", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="row">

      <%= yield %>
    </div>
    <div class='col-sm-12'>
      <%= debug(params) if Rails.env.development? %>
    </div>

    <%= render 'shared/footer' %>
  </div>
</body>
</html>
