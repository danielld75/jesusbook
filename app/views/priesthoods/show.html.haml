%h1
  = t('Priesthood')
%table.table
  %tr
    %th
      = t('sacrament_date')
    %th
      = t('local')
    %th
      = t('parish')
    %th
      = t('minister')
  %tr
    %td
      = @priesthood.sacrament_date
    %td
      = @priesthood.local
    %td
      = @priesthood.parish
    %td
      = @priesthood.minister

= link_to t('Edit'), edit_user_priesthood_path(@priesthood), class: "btn btn-default"
= link_to t('Delete'), user_priesthood_path, method: :delete, class: "btn btn-danger", data: {confirm: t(:sure)}
