%h1
  = t('Marriage')
= form_for (@marriage), url: user_marriage_path do |f|
  = f.label t(:local)
  = f.text_field :local

  = f.label t(:parish)
  = f.text_field :parish

  = f.label t(:minister)
  = f.text_field :minister

  = f.label t(:sacrament_date)
  = f.date_field :sacrament_date

  = f.submit t('helpers.submit.create', model: t(f.object.model_name.human))

